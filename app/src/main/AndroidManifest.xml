<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.derby.football">

    <uses-permission android:name="android.permission.READ_PHONE_STATE" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE" />
    <uses-permission android:name="android.permission.READ_LOGS" />


    <application
        android:allowBackup="true"
        android:icon="@mipmap/app_icon"
        android:name=".AppContext"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".ui.activity.AppStartActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity android:name=".ui.activity.LoginActivity" />
        <activity android:name=".ui.activity.RegisterActivity" android:windowSoftInputMode="adjustPan" />
        <activity android:name=".ui.activity.MainActivity" android:launchMode="singleTask" />
        <activity android:name=".ui.activity.CourtActivity" />
        <activity android:name=".ui.activity.CourtDetailActivity" />
        <activity android:name=".ui.activity.CourtChooseActivity" />
        <activity android:name=".ui.activity.CityAreaActivity" />
        <activity android:name=".ui.activity.TeamActivity" />
        <activity android:name=".ui.activity.TeamDetailActivity" />
        <activity android:name=".ui.activity.TrainingActivity" />
        <activity android:name=".ui.activity.TrainingDetailsActivity" />
        <activity android:name=".ui.activity.MatchActivity" />
        <activity android:name=".ui.activity.MatchDetailsActivity" />
        <activity android:name=".ui.activity.MineInfoActivity" />
        <activity android:name=".ui.activity.MineEditActivity" />


        <!-- 配置BUGLY_APPID -->
        <meta-data
            android:name="BUGLY_APPID"
            android:value="900025908" />


    </application>

</manifest>

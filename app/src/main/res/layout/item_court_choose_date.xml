<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="@dimen/find_court_order_date_height"  >

    <LinearLayout
        android:id="@+id/itemRootLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:background="@drawable/selector_square_bg"
        android:clickable="true"
        android:orientation="vertical"
        android:gravity="center_horizontal">

        <TextView
            android:id="@+id/tvDay"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:paddingTop="16dp"
            android:text="星期5"
            android:textColor="@drawable/color_find_court_order_date_text"
            android:textSize="17sp" />

        <TextView
            android:id="@+id/tvDate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingBottom="2dp"
            android:paddingTop="2dp"
            android:text="2月9号"
            android:textColor="@drawable/color_find_court_order_date_sub_text" />
    </LinearLayout>

    <TextView
        android:id="@+id/lineView"
        android:layout_width="match_parent"
        android:layout_height="4dp"
        android:background="@drawable/selector_find_court_order_date_line_bg" />

</LinearLayout>


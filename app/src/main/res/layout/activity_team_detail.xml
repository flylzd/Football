<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <include layout="@layout/include_toolbar" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingBottom="2dp"
            android:paddingLeft="16dp"
            android:paddingTop="10dp">

            <ImageView
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:scaleType="centerCrop"
                android:src="@mipmap/app_icon" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:paddingLeft="10dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:gravity="bottom"
                    android:text="五人制男子国家队"
                    android:textSize="20sp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:gravity="top"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="佛山市" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="8dp"
                        android:text="禅城区" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="8dp"
                        android:text="粉丝 94" />

                </LinearLayout>

            </LinearLayout>

            <Button
                android:layout_width="50dp"
                android:layout_height="30dp"
                android:layout_marginRight="20dp"
                android:background="@color/colorPrimary"
                android:text="关注"
                android:textColor="@color/white" />

        </LinearLayout>

        <include layout="@layout/line_horizontal" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:orientation="horizontal">

            <LinearLayout style="@style/homeMineTopLayout">

                <TextView
                    style="@style/homeMineTopLayout.Text"
                    android:text="24" />

                <TextView
                    style="@style/homeMineTopLayout.TextBottom"
                    android:text="平均年龄" />

            </LinearLayout>

            <include layout="@layout/line_vertical" />

            <LinearLayout style="@style/homeMineTopLayout">

                <TextView
                    style="@style/homeMineTopLayout.Text"
                    android:text="183cm" />

                <TextView
                    style="@style/homeMineTopLayout.TextBottom"
                    android:text="平均身高" />

            </LinearLayout>

            <include layout="@layout/line_vertical" />

            <LinearLayout style="@style/homeMineTopLayout">

                <TextView
                    style="@style/homeMineTopLayout.Text"
                    android:text="145kg" />

                <TextView
                    style="@style/homeMineTopLayout.TextBottom"
                    android:text="平均体重" />

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:background="@color/white"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawableLeft="@mipmap/ic_my_war"
                android:drawablePadding="10dp"
                android:drawableRight="@mipmap/ic_right_arrow"
                android:paddingBottom="8dp"
                android:paddingLeft="16dp"
                android:paddingRight="10dp"
                android:paddingTop="8dp"
                android:text="球队战绩"
                android:textSize="18sp" />

            <include layout="@layout/line_horizontal" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawableLeft="@mipmap/ic_my_war"
                android:drawablePadding="10dp"
                android:drawableRight="@mipmap/ic_right_arrow"
                android:paddingBottom="8dp"
                android:paddingLeft="16dp"
                android:paddingRight="10dp"
                android:paddingTop="8dp"
                android:text="空间"
                android:textSize="18sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingLeft="20dp"
                android:paddingRight="20dp">

                <ImageView
                    android:layout_width="0dp"
                    android:layout_height="100dp"
                    android:layout_weight="1"
                    android:scaleType="centerCrop"
                    android:src="@mipmap/app_icon" />

                <ImageView
                    android:layout_width="0dp"
                    android:layout_height="100dp"
                    android:layout_marginLeft="10dp"
                    android:layout_weight="1"
                    android:scaleType="centerCrop"
                    android:src="@mipmap/app_icon" />

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:background="@color/white"
            android:orientation="vertical"
            android:paddingBottom="10dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawableLeft="@mipmap/ic_my_war"
                android:drawablePadding="10dp"
                android:paddingBottom="8dp"
                android:paddingLeft="16dp"
                android:paddingRight="10dp"
                android:paddingTop="8dp"
                android:text="大名单(22)"
                android:textSize="18sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <de.hdodenhof.circleimageview.CircleImageView
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_centerInParent="true"
                    android:layout_marginLeft="16dp"
                    android:src="@mipmap/app_icon"
                    app:civ_border_color="#FF000000"
                    app:civ_border_width="2dp" />

                <de.hdodenhof.circleimageview.CircleImageView
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_centerInParent="true"
                    android:layout_marginLeft="16dp"
                    android:src="@mipmap/app_icon"
                    app:civ_border_color="#FF000000"
                    app:civ_border_width="2dp" />

                <de.hdodenhof.circleimageview.CircleImageView
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_centerInParent="true"
                    android:layout_marginLeft="16dp"
                    android:src="@mipmap/app_icon"
                    app:civ_border_color="#FF000000"
                    app:civ_border_width="2dp" />

                <de.hdodenhof.circleimageview.CircleImageView
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_centerInParent="true"
                    android:layout_marginLeft="16dp"
                    android:src="@mipmap/app_icon"
                    app:civ_border_color="#FF000000"
                    app:civ_border_width="2dp" />

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingLeft="30dp"
            android:paddingRight="30dp">

            <Button
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:layout_marginRight="10dp"
                android:layout_weight="1"
                android:text="申请加入"
                android:background="@drawable/selector_radius_btn"
                android:textColor="@color/white" />

            <Button
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:layout_marginRight="10dp"
                android:layout_weight="1"
                android:background="@drawable/selector_radius_btn"
                android:text="发起挑战"
                android:textColor="@color/white" />

        </LinearLayout>


    </LinearLayout>

</ScrollView>


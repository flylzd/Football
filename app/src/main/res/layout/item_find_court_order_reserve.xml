<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/find_court_order_bottom_my_reserve_height"
    android:layout_marginRight="10dp"
    android:gravity="center"
    android:orientation="vertical">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="@drawable/bg_border_find_court_order_my_reserve_time"
        android:gravity="center"
        android:textSize="12sp"
        android:text="12:00-13:00"
        android:textColor="@color/white" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:gravity="center"
        android:text="3号场"
        android:background="@drawable/bg_border_find_court_order_my_reserve_site"
        android:textSize="12sp"
        android:textColor="@color/find_court_order_my_reserve" />

</LinearLayout>


<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <!--<item android:drawable="@color/main_button_bg_pressed" android:state_pressed="true" />-->
    <!--<item android:drawable="@color/main_button_bg"  />-->
    <item android:state_enabled="false">
        <shape>
            <corners
                android:radius="4dp"/>
            <stroke
                android:width="1dp"
                android:color="@color/enabled_false" />
        </shape>
    </item>
    <item android:state_pressed="true">
        <shape>
            <corners
                android:radius="4dp"/>
            <solid
                android:color="@color/main_button_bg_pressed"/>
        </shape>
    </item>
    <item>
        <shape>
            <corners
                android:radius="4dp"/><!-- 设置圆角半径 -->
            <solid
                android:color="@color/main_button_bg"/><!-- 填充的颜色 -->
        </shape>
    </item>

</selector>